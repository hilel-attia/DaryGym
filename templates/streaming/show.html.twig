{% extends 'base.html.twig' %}

{% block title %}Streaming{% endblock %}

{% block body %}
    <h1>Streaming</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ streaming.id }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ streaming.room }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ streaming.name }}</td>
            </tr>
            <tr>
                <th>Audio</th>
                <td>{{ streaming.audio ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ streaming.video ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notify</th>
                <td>{{ streaming.notify ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_streaming_index') }}">back to list</a>

    <a href="{{ path('app_streaming_edit', {'id': streaming.id}) }}">edit</a>

    {{ include('streaming/_delete_form.html.twig') }}
{% endblock %}
