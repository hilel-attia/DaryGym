{% block body  %}
   <div class="fa fa-chevron-down">
    <div class="dropdown-item">
    <div class="row">
    <div class="col-md-12">
    <div class="card">
    <div class="card-header card-header-primary">
        <h1 align="center">Liste des offres</h1>
        
    </div>
    <div class="card-body">
    <div class="table-responsive">
    <table id="example" class="dropdown-item" border="2">
        <thead class=" fa fa-chevron-down">
        <tr>
                
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                
                <td> <img class="-google-plus-circle" src="{{ asset('./uploads/images/') ~ offre.image }}"alt="offre" width="192" height="140" >  </td>

                <td>{{ offre.titre }}</td>
                <td>{{ offre.description }}</td>
                <td>{{ offre.prix }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
