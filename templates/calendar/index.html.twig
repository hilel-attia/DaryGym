{% extends "admin/bars.html.twig" %}
{% block contenpage %}
    <h1>les seances</h1>
    <ul class="nav navbar-right panel_toolbox">
        <li>
            <a href="{{ path('calendar_new') }}" class="btn btn-success">NEW</a>
        </li>
    </ul>

    <table id="example" class="display table table-striped table-bordered dataminetables">
        <thead>
            <tr>

                <th>Titre</th>
                <th>debut</th>
                <th>fin</th>
                <th>Description</th>
                <th>supprimer</th>
                <th>modifier</th>

            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>

                <td>{{ calendar.title }}</td>
                <td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ calendar.description }}</td>


                <td> 	 {{ include('calendar/_delete_form.html.twig') }}</td>


                <td>   <center><a  <button type="button" href="{{ path('calendar_edit',{"id":calendar.id }) }}" class="btn btn-primary">modifier

                        </button> </a> </center></td>


            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a <button type="button" href="{{ path('main') }}"class="btn btn-info">calendrier </button> </a>
{% endblock %}
